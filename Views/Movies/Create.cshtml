@model Proyect_Rotten_Tomatoes.Models.Movie

@{
    ViewData["Title"] = "Create";
}

<h1>Add recommendation</h1>

<h4>Movie</h4>
<hr/>
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label class="control-label">Link</label>
                <input type="text" class="form-control" name="url" /> 
                <span asp-validation-for="url" class="text-danger"></span> <!-- Display validation error message -->
            </div>
            <div class="form-group">
                <input type="submit" value="Add recommendation" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>