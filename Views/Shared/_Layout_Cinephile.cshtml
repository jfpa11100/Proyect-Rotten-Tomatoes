@{
    ViewData["Title"] = "_Layout_Cinephile";
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=80%, initial-scale=1.0" />
    <title>Fk RottenTomatoes</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true"/>
    <link rel="stylesheet" href="~/Proyect_Rotten_Tomatoes.styles.css" asp-append-version="true" />
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light bg-white border-bottom box-shadow mb-3">
            <div class="container-fluid">
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
                </button>
                <div class="navbar-collapse collapse d-flex justify-content-between">
                    <ul class="navbar-nav flex-grow-1">
                        <li class="nav-item">
                            @if (ViewContext.RouteData.Values["Controller"].ToString() == "Series" && (ViewContext.RouteData.Values["Action"].ToString() == "Index" || ViewContext.RouteData.Values["Action"].ToString() == "TopSeries")) {
                                <a class="nav-link text-dark" asp-area="" asp-controller="Movies" asp-action="Index"><i class="bi bi-film"></i> Movies</a>
                            } else {
                                <a class="nav-link text-dark" asp-area="" asp-controller="Series" asp-action="Index"><i class="bi bi-film"></i> Series</a>
                            }
                        </li>
                    </ul>
                    <form class="form-inline my-3 my-lg-0" asp-controller="Movies" asp-action="Filter" style="padding-right: 30px;">
                        <input name="searchString" type="text" class="form-control" placeholder="Search for a movie or serie..." aria-label="Recipient's username" aria-describedby="button-addon2">
                    </form>
                    <a class="nav-link text-dark ml-auto" asp-area="" asp-controller="Home" asp-action="Index">Sign off</a>

                </div>
            </div>
        </nav>
    </header>
    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>
    <script src="~/js/site.js" asp-append-version="true"></script>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>